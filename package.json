{
  "name": "@a-novel/auth-client",
  "private": false,
  "version": "1.1.0",
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "lint:stylecheck": "prettier --check . --config prettier.config.ts",
    "lint:typecheck": "tsc",
    "lint:eslint": "pnpm dlx eslint .",
    "lint": "pnpm lint:stylecheck && pnpm lint:typecheck && pnpm lint:eslint",
    "format": "prettier --write . --config prettier.config.ts",
    "build": "rm -rf ./dist && vite build && tsc --build tsconfig.build.json",
    "test": "dotenvx run -f .env.dev -- vitest",
    "storybook:dev": "dotenvx run -f .env.dev -- storybook dev -p 6006",
    "storybook:build": "storybook build"
  },
  "license": "AGPL-3.0",
  "packageManager": "pnpm@10.10.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/a-novel/auth-client.git"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.es.js",
      "types": "./dist/index.d.ts"
    }
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "engines": {
    "npm": ">=10.9.2",
    "node": ">=23.11.0"
  },
  "peerDependencies": {
    "@a-novel/neon-ui": "^2.3.0",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.0",
    "@mui/material": "^7.0.2",
    "@tanstack/react-query": "^5.75.0",
    "i18next": "^24.2.3",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-i18next": "^15.5.1"
  },
  "dependencies": {
    "@mui/icons-material": "^7.0.2",
    "@tanstack/react-form": "^1.9.0",
    "yaml": "^2.7.1",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.6",
    "@dotenvx/dotenvx": "^1.42.2",
    "@eslint/config-helpers": "^0.2.2",
    "@eslint/js": "^9.26.0",
    "@storybook/addon-essentials": "^8.6.12",
    "@storybook/addon-interactions": "^8.6.12",
    "@storybook/addon-onboarding": "^8.6.12",
    "@storybook/blocks": "^8.6.12",
    "@storybook/manager-api": "^8.6.12",
    "@storybook/react": "^8.6.12",
    "@storybook/react-vite": "^8.6.12",
    "@storybook/test": "^8.6.12",
    "@storybook/theming": "^8.6.12",
    "@svgr/plugin-jsx": "^8.1.0",
    "@svgr/rollup": "^8.1.0",
    "@tanstack/eslint-plugin-query": "^5.74.7",
    "@testing-library/react": "^16.3.0",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/node": "^22.15.3",
    "@types/react": "^19.1.2",
    "@types/react-dom": "^19.1.3",
    "@vitest/coverage-v8": "3.1.2",
    "eslint": "^9.26.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-storybook": "^0.11.6",
    "globals": "^16.0.0",
    "i": "^0.3.7",
    "jsdom": "^26.1.0",
    "nock": "^14.0.4",
    "prettier": "^3.5.3",
    "storybook": "^8.6.12",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.1",
    "vite": "^6.3.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.1.2"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@a-novel/neon-ui",
      "esbuild"
    ]
  },
  "eslintConfig": {
    "extends": [
      "plugin:storybook/recommended"
    ]
  }
}
